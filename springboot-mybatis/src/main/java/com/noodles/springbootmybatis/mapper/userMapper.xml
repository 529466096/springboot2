<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.noodles.springbootmybatis.dao.UserDao">

    <sql id="BASE_TABLE">
        t_user
      </sql>

        <sql id="BASE_COLUMN">
        id,username,psw
      </sql>

    <insert id="insertUser" parameterType="com.noodles.springbootmybatis.bean.User">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            username,psw
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{username, jdbcType=VARCHAR},#{psw, jdbcType=VARCHAR}
        </trim>
    </insert>


    <select id="getUsers"  resultType="com.noodles.springbootmybatis.bean.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>
</mapper>